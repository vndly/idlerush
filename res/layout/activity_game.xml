                    style="@style/building_icon"
                    android:contentDescription="@string/image_description"
                    android:src="@drawable/icon_building_1" />

                <TextView
                    android:id="@+id/building_1_level"
                    style="@style/building_count" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/building_1_cost"
                        style="@style/building_row_line" />

                    <TextView
                        android:id="@+id/building_1_total_production"
                        style="@style/building_row_line" />

                    <TextView
                        android:id="@+id/building_1_production_unit"
                        style="@style/building_row_line" />
                </LinearLayout>
            </TableRow>

            <View style="@style/view_separator" />

            <TableRow style="@style/building_row" >

                <ImageButton
                    style="@style/building_icon"
                    android:contentDescription="@string/image_description"
                    android:src="@drawable/icon_building_2" />

                <TextView
                    style="@style/building_count"
                    android:text="21" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="vertical" >

