<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="8dp" >

        <TextView
            android:id="@+id/total_coins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123,456,789"
            android:textColor="@color/default_text_color"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/rate_coins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="1,234 / second"
            android:textColor="@color/default_text_color"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#444444" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TableRow style="@style/building_row" >

                <ImageButton
                    style="@style/building_icon"
                    android:contentDescription="@string/image_description"
                    android:src="@drawable/icon_cursor" />

                <TextView
                    style="@style/building_count" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="Cost: 234,567"
                        android:textColor="@color/default_text_color"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="Total: 3,456 / sec"
                        android:textColor="@color/default_text_color"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="Unit: 1,152 / sec"
                        android:textColor="@color/default_text_color"
                        android:textSize="12sp" />
                </LinearLayout>
            </TableRow>

            <View style="@style/view_separator" />

            <TableRow style="@style/building_row" >

                <ImageButton
                    style="@style/building_icon"
                    android:contentDescription="@string/image_description"
                    android:src="@drawable/icon_grandma" />

                <TextView
                    style="@style/building_count" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="Cost: 234,567"
                        android:textColor="@color/default_text_color"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="Total: 3,456 / sec"
                        android:textColor="@color/default_text_color"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="Unit: 1,152 / sec"
                        android:textColor="@color/default_text_color"
                        android:textSize="12sp" />
                </LinearLayout>
            </TableRow>

            <View style="@style/view_separator" />
        </TableLayout>
    </ScrollView>

</LinearLayout>